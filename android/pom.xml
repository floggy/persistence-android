<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.floggy.persistence.android</groupId>
	<artifactId>floggy-persistence-android</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>Floggy Persistence Project for Android</name>
	<url>http://www.floggy.org</url>
	<description>A persistence framework for Android</description>
	<inceptionYear>2010</inceptionYear>
	<packaging>pom</packaging>
	<organization>
		<name>Floggy Open Source Group</name>
		<url>http://www.floggy.org/</url>
	</organization>
	<licenses>
		<license>
			<distribution>manual</distribution>
			<name>Apache License 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>
	<scm>
		<connection>scm:git:git://github.com/floggy/persistence.git</connection>
		<developerConnection>scm:git:git@github.com:floggy/persistence.git</developerConnection>
		<url>http://github.com/floggy/persistence</url>
	</scm>
	<pluginRepositories>
		<pluginRepository>
			<id>floggy</id>
			<url>http://floggy.sourceforge.net/repository</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>
	<issueManagement>
		<system>sourceforge</system>
		<url>http://sourceforge.net/tracker/?group_id=139426</url>
	</issueManagement>
	<ciManagement>
		<system>parabuild</system>
		<url>http://parabuild.viewtier.com:8080/parabuild/index.htm?cid=29a4&amp;view=detailed&amp;buildid=12739&amp;displaygroupid=-1</url>
	</ciManagement>
	<distributionManagement>
		<site>
			<id>sourceforge</id>
			<name>SourceForge.net</name>
			<url>scp://shell.sourceforge.net:/home/groups/f/fl/floggy/htdocs/modules/${project.artifactId}/${project.version}</url>
		</site>
		<repository>
			<id>sourceforge</id>
			<name>SourceForge.net</name>
			<url>scp://shell.sourceforge.net:/home/groups/f/fl/floggy/htdocs/repository</url>
		</repository>
		<snapshotRepository>
			<id>sourceforge</id>
			<name>SourceForge.net</name>
			<url>scp://shell.sourceforge.net:/home/groups/f/fl/floggy/htdocs/repository</url>
		</snapshotRepository>
	</distributionManagement>
	<mailingLists>
		<mailingList>
			<name>Developer's mailing list</name>
			<archive>http://sourceforge.net/mailarchive/forum.php?forum=floggy-developer</archive>
			<post>floggy-developer@lists.sourceforge.net</post>
			<subscribe>https://lists.sourceforge.net/lists/listinfo/floggy-developer</subscribe>
			<unsubscribe>https://lists.sourceforge.net/lists/listinfo/floggy-developer</unsubscribe>
		</mailingList>
		<mailingList>
			<name>User's mailing list</name>
			<archive>http://sourceforge.net/mailarchive/forum.php?forum=floggy-user</archive>
			<post>floggy-user@lists.sourceforge.net</post>
			<subscribe>https://lists.sourceforge.net/lists/listinfo/floggy-user</subscribe>
			<unsubscribe>https://lists.sourceforge.net/lists/listinfo/floggy-user</unsubscribe>
		</mailingList>
	</mailingLists>
	<developers>
		<developer>
			<name>Thiago Moreira</name>
			<id>tmoreira2020</id>
			<email>thiago.moreira@floggy.org</email>
			<organization>Floggy Open Source Group</organization>
			<roles>
				<role>Java Developer</role>
				<role>Release Manager</role>
			</roles>
			<timezone>-3</timezone>
		</developer>
	</developers>
	<build>
		<plugins>
			<plugin>
				<groupId>com.mycila.maven-license-plugin</groupId>
				<artifactId>maven-license-plugin</artifactId>
				<version>1.5.0</version>
				<inherited>true</inherited>
				<dependencies>
					<dependency>
						<groupId>net.sourceforge.floggy</groupId>
						<artifactId>build-tools</artifactId>
						<version>1.3.0</version>
					</dependency>
				</dependencies>
				<configuration>
					<header>license-header-template.txt</header>
					<includes>
						<include>src/**</include>
					</includes>
					<excludes>
						<exclude>target/**</exclude>
						<exclude>**/license-header-template.txt</exclude>
					</excludes>
					<properties>
						<year>2010</year>
						<organizationName>${project.organization.name}</organizationName>
					</properties>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.4</version>
				<inherited>true</inherited>
				<dependencies>
					<dependency>
						<groupId>net.sourceforge.floggy</groupId>
						<artifactId>build-tools</artifactId>
						<version>1.3.0</version>
					</dependency>
				</dependencies>
				<configuration>
					<configLocation>checkstyle-checks-configuration.xml</configLocation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<inherited>true</inherited>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>1.0-beta-1</version>
				<executions>
					<execution>
						<id>enforce-versions</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<requireMavenVersion>
									<version>2.2.0</version>
								</requireMavenVersion>
								<requireJavaVersion>
									<version>1.5</version>
								</requireJavaVersion>
							</rules>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0-beta-9</version>
				<inherited>true</inherited>
				<configuration>
					<tagBase>https://floggy.svn.sourceforge.net/svnroot/floggy/tags</tagBase>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.3</version>
				<inherited>true</inherited>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jalopy-maven-plugin</artifactId>
				<version>1.0-alpha-1</version>
				<inherited>true</inherited>
				<dependencies>
					<dependency>
						<groupId>net.sourceforge.floggy</groupId>
						<artifactId>build-tools</artifactId>
						<version>1.3.0</version>
					</dependency>
				</dependencies>
				<configuration>
					<convention>jalopy-code-convetion.xml</convention>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<configLocation>checkstyle-checks-configuration.xml</configLocation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.6.1</version>
				<inherited>true</inherited>
				<configuration>
					<minmemory>128m</minmemory>
					<maxmemory>512</maxmemory>
					<stylesheet>maven</stylesheet>
					<excludePackageNames>*.internal</excludePackageNames>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
				<version>2.1</version>
				<inherited>true</inherited>
				<configuration>
					<linkJavadoc>true</linkJavadoc>
					<javadocDir>/apidocs/</javadocDir>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-project-info-reports-plugin</artifactId>
				<version>2.1.2</version>
				<inherited>true</inherited>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
				<version>2.4.3</version>
				<inherited>true</inherited>
			</plugin>
		</plugins>
	</reporting>
	<modules>
		<module>floggy-persistence-android-core</module>
		<module>floggy-persistence-android-sample</module>
	</modules>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<android.version>2.1_r1</android.version>
	</properties>
</project>
